<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <TextView
        android:id="@+id/place_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:autoSizeMaxTextSize="@dimen/textsize_normal"
        android:autoSizeMinTextSize="@dimen/textsize_smaller"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/player_tags_selector"
        android:gravity="center"
        android:maxLines="1"
        android:padding="3dp"
        android:textColor="@color/player_tags_text_selector"
        android:textSize="@dimen/textsize_normal" />
</FrameLayout>